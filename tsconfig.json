{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "allowJS": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "",
    "outDir": "dist",
    "baseUrl": "./",
    "strictNullChecks": true,
    "paths": {
      "@/*": ["packages/*"]
    }
  },

  "include": ["packages", "plugins", "app"],
  "exclude": ["node_modules", "build", "scripts", "tests", "jest"]
}
